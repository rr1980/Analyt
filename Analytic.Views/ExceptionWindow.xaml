<Window x:Class="Analytic.Views.ExceptionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Analytic.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="ErrorMsg"  Margin="10,5,10,-3" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox Grid.Row="1" x:Name="ErrorDetails"  Margin="10,5,10,10" TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>
